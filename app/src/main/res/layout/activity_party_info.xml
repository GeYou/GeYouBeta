<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/RecyclerView"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="PARTY INFO" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPartyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PARTY NAME:"
                android:textColor="#000000"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editTextPartyNameInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textViewStartTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START DATE AND TIME:"
                android:textColor="#000000"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editTextStartTimeStampInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="datetime"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textViewEndTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="END DATE AND TIME:"
                android:textColor="#000000"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editTextEndTimeStampInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="datetime"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textViewDesinationLonginfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESTINATION LONGITUDE:"
                android:textColor="#000000"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editTextDestinationLongInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textViewDestinationLatInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESTINATION LATTITUDE:"
                android:textColor="#000000"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editTextDestinationLatInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:textSize="17sp" />

            <Button
                android:id="@+id/btnEditPartyInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="EDIT" />

            <Button
                android:id="@+id/btnSavePartyInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:enabled="false"
                android:text="SAVE" />

            <Button
                android:id="@+id/btnCancelPartyInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="CANCEL" />

            <Button
                android:id="@+id/btnPartyMembersInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="PARTY MEMBERS" />
        </LinearLayout>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="320dp"
        android:layout_height="fill_parent"
        android:layout_gravity="left"

        android:background="#ffffffff"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>
</android.support.v4.widget.DrawerLayout>
